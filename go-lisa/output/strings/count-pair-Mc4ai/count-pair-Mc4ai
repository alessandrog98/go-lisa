//BEGIN
package main

func CountCharPair(s string, pair string) int {
    count := 0
    for i := 0; i < len(s)-1; i++ {
        if s[i:i+2] == pair {
            count++
        }
    }
    return count
}

func main() {
    s := "hello world"
    pair := "lo"
    count := CountCharPair(s, pair)
    fmt.Println(count) // Output: 2
}
//END